{
    "name": "TSLambda",
    "version": "0.0.1",
    "description": "A starting point for an AWS Lambda function in Typescript",
    "main": "index.js",
    "repository": "git@github.com:WsCandy/TSLambda.git",
    "author": "Samuel Woodbridge <s-bridge@live.co.uk>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "clean": "rimraf dist",
        "start": "node dist/run.js",
        "build": "yarn clean && tsc --outDir ./dist ",
        "dev": "yarn clean && tsc --outDir ./dist --watch",
        "lint": "eslint --ext .ts src/",
        "format": "prettier src/**/*.ts --write"
    },
    "lint-staged": {
        "*.{ts}": [
            "eslint --fix --color",
            "git add"
        ]
    },
    "devDependencies": {
        "@types/aws-sdk": "^2.7.0",
        "@types/dotenv": "^6.1.1",
        "@types/node": "^12.6.8",
        "@typescript-eslint/eslint-plugin": "^1.12.0",
        "@typescript-eslint/parser": "^1.12.0",
        "dotenv": "^8.0.0",
        "eslint": "^6.0.1",
        "eslint-config-prettier": "^6.0.0",
        "husky": "^3.0.1",
        "lint-staged": "^9.2.0",
        "prettier": "^1.18.2",
        "pretty-quick": "^1.11.1",
        "rimraf": "^2.6.3",
        "typescript": "^3.5.3"
    },
    "dependencies": {
        "aws-sdk": "^2.814.0"
    }
}
